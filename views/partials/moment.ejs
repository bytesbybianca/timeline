<!-- Page -->
<div class="container">
    <div class="row">
      <div class="col-12">
        <!-- Timeline Area-->
        <div class="apland-timeline-area">
          <% for(let i = 0; i < moments.length; i++) {%>
            <!-- Single Timeline Content-->
            <div class="single-timeline-area">
              <div class="timeline-date wow fadeInLeft" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInLeft;">
                <!-- Timeline year -->
                <p><%= moments[i].date.toLocaleString(('en-US'), {
                  year: 'numeric',
                }) %></p>
              </div>
              <div class="row">
                <div class="col-12 col-md-6 col-lg-8">
                  <div class="single-timeline-content d-flex wow fadeInLeft" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInLeft;">
                    <div class="timeline-icon"><i class="fa fa-address-card" aria-hidden="true"></i></div>
                    <div class="timeline-text">
                        <% if(moments[i].journalEntry) { %>
                            <h6>Journal entry:</h6>
                            <span><%= moments[i].journalEntry %></span>
                        <% } else if(moments[i].tweetId) { %>
                            <h6>Tweet:</h6>
                            <span>this has a tweet id</span>
                        <% } else if(moments[i].location) { %>
                            <h6>Location:</h6>
                            <span><%= moments[i].location %></span>
                        <% } else if(moments[i].momentImage) { %>
                            <h6>Photo:</h6>
                            <img class="img-fluid" src="<%= moments[i].momentImage %>">
                        <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>